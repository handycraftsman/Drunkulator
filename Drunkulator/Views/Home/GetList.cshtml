@model InitialLists
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Data</h1>
    <form method="post" asp-controller="Home" asp-action="GetList">
        <h2 class="text-capitalize">List of drinkers:</h2>
        @for (int i = 0; i < Model.MembersList.Length; i++)
        {
            <div class="form-group">
                <label> @(i + 1) </label><input class="form-control" asp-for="MembersList[i]" />
            </div>
        }
        <h2 class="text-capitalize">List of dishes:</h2>
        @for (int i = 0; i < Model.DishesList.Length; i++)
        {
            <div class="form-group">
                <label> @(i + 1) </label><input class="form-control" asp-for="DishesList[i]" />
            </div>
        }
        <button type="submit" class="btn btn-primary">OK</button>
    </form>
</div>
