@model InitialLists
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Enter Data</h1>
    <form method="post" asp-controller="Home" asp-action="GetList">
        <h2 class="text-capitalize">List of drinkers:</h2>
        @for (int i = 0; i < Model.MembersList.Length; i++)
        {
            <div  class="form-group row">
                <label class="col-sm-2 col-form-label"> @(i + 1) </label>
                <div class="col-sm-10">
                    <input class="form-control col-sm-10" asp-for="MembersList[i]" />
                </div>
            </div>
        }
        <h2 class="text-capitalize">List of dishes:</h2>
        @for (int i = 0; i < Model.DishesList.Length; i++)
        {
            <div  class="form-group row">
                <label class="col-sm-2 col-form-label"> @(i + 1) </label>
                <div class="col-sm-10">
                    <input class="form-control col-sm-10" asp-for="DishesList[i]" />
                </div>
            </div>
        }
        <button type="submit" class="btn btn-primary">OK</button>
    </form>
</div>
